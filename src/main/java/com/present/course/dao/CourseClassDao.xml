<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.present.course.dao.CourseClassDao">
    <resultMap type="com.present.course.bean.CourseClass" id="courseClassMap">
        <!-- courseClass  表 id -->
        <id column="id" property="id"/>
        <!-- 课程id -->
        <result column="course_id" property="courseId"/>
        <!-- 班级id -->
        <result column="class_id" property="classId"/>
        <!-- 启动时间 -->
        <result column="start_time" property="startTime"/>

        <!-- 数据状态 -->
        <result column="data_state" property="dataState"/>
    </resultMap>


    <!-- 将数据插入数据库中 -->
    <insert id="insert" parameterType="com.present.course.bean.CourseClass">
        INSERT INTO
        course_class (
        id,
        course_id,
        class_id,
        start_time,
        data_state)
        VALUES (
        #{id},
        #{courseId},
        #{classId},
        #{startTime},
        #{dataState})
    </insert>

    <!-- 根据key查找数据库中信息 -->
    <select id="queryByKey" resultMap="courseClassMap">
        SELECT
        *
        FROM
        course_class
        <where>
            id = #{id}
        </where>
    </select>

    <!-- 根据key更新数据库中信息 -->
    <update id="updateByKey">
        Update
        course_class
        <set>
            <if test=" courseId != null ">
                course_id = #{courseId},
            </if>
            <if test=" classId != null ">
                class_id = #{classId},
            </if>
            <if test=" startTime != null ">
                start_time = #{startTime},
            </if>

            <if test=" dataState != null ">
                data_state = #{dataState}
            </if>
        </set>
        <where>
            id = #{id}
        </where>
    </update>

    <!-- 根据Key删除数据库中信息 -->
    <delete id="deleteByKey">
        DELETE FROM
        course_class
        <where>
            id = #{id}
        </where>
    </delete>


    <!-- 根据key查找数据库中信息 -->
    <select id="queryCourseByClassId" resultMap="com.present.course.dao.CourseDao.courseMap">
        SELECT
        course.id,
        course.course_name
        FROM
        course_class
        INNER
        JOIN
        course
        ON
        course_class.course_id=course.id
        AND
        class_id=#{classId}
    </select>


    <!-- 通过老师和课程获取某个课程下面的所有班级-->
    <select id="queryClassesByTeacherAndCourse" resultMap="com.present.classes.dao.ClassesDao.classesMap">
        SELECT
        distinct(class.id),
        class_name,
        school_id
        FROM
        class,
        course_class,
        teacher_course
        <where>
            teacher_course.teacher_id=#{teacherId}
            AND
            course_class.class_id=class.id
        </where>
        ORDER
        BY
        class_name
    </select>


</mapper>