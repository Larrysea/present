<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.present.sign.dao.dao.CourseSignDao">
    <resultMap type="com.present.sign.dao.entity.CourseSign" id="courseSignMap">
        <!-- 课程发起签到id -->
        <id column="id" property="id"/>
        <!-- 课程id -->
        <result column="course_id" property="courseId"/>
        <!-- 发起签到的时间 -->
        <result column="create_time" property="createTime"/>
        <!-- 签到发起类型 -->
        <result column="sign_start_type" property="signStartType"/>
    </resultMap>

    <!-- 将数据插入数据库中 -->
    <insert id="insert" parameterType="com.present.sign.dao.entity.CourseSign">
        INSERT INTO
        course_sign (
            id,
            course_id,
            create_time,
            sign_start_type) 
        VALUES (
            #{id},
            #{courseId},
            #{createTime},
            #{signStartType}) 
    </insert>

    <!-- 根据key查找数据库中信息 -->
    <select id="queryByKey" resultMap="courseSignMap">
        SELECT
            * 
        FROM 
            course_sign 
        <where>
            id = #{id} 
        </where>
    </select>

    <!-- 根据key更新数据库中信息 -->
    <update id="updateByKey">
        Update
            course_sign
        <set>
            <if test = " courseId != null ">
                course_id = #{courseId},
            </if>
            <if test = " createTime != null ">
                create_time = #{createTime},
            </if>
            <if test = " signStartType != null ">
                sign_start_type = #{signStartType}
            </if>
        </set>
        <where>
            id = #{id} 
        </where>
    </update>

    <!-- 根据Key删除数据库中信息 -->
    <delete id="deleteByKey">
        DELETE FROM
            course_sign 
        <where>
            id = #{id} 
        </where>
    </delete>
</mapper>