<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.present.login.dao.TeacherDao">
    <resultMap type="com.present.login.bean.Teacher" id="teacherMap">
        <!-- 用户的唯一id -->
        <id column="id" property="id"/>
        <!-- 用户名 -->
        <result column="name" property="name"/>
        <!-- 用户密码 -->
        <result column="password" property="password"/>
        <!-- 学校id -->
        <result column="school_id" property="schoolId"/>
        <!-- 邮箱 -->
        <result column="mail" property="mail"/>
    </resultMap>

    <!-- 将数据插入数据库中 -->
    <insert id="insert" parameterType="com.present.login.bean.Teacher">
        INSERT INTO
        teacher (
        Id,
        name,
        password,
        school_id,
        mail)
        VALUES (
        #{Id},
        #{name},
        #{password},
        #{schoolId},
        #{mail})
    </insert>

    <!-- 根据key查找数据库中信息 -->
    <select id="queryByKey" resultMap="teacherMap">
        SELECT
        *
        FROM
        teacher
        <where>
            Id = #{Id}
        </where>
    </select>

    <!-- 根据key更新数据库中信息 -->
    <update id="updateByKey">
        Update
        teacher
        <set>
            <if test=" name != null ">
                name = #{name},
            </if>
            <if test=" password != null ">
                password = #{password},
            </if>
            <if test=" schoolId != null ">
                school_id = #{schoolId},
            </if>
            <if test=" mail != null ">
                mail = #{mail}
            </if>
        </set>
        <where>
            Id = #{Id}
        </where>
    </update>

    <!-- 根据Key删除数据库中信息 -->
    <delete id="deleteByKey">
        DELETE FROM
        teacher
        <where>
            Id = #{Id}
        </where>
    </delete>

    <!-- 根据key查找数据库中信息 -->
    <select id="login" resultMap="teacherMap">
        SELECT
        *
        FROM
        teacher
        <where>
            name = #{name}
            AND
            password=#{password}
        </where>
    </select>

</mapper>